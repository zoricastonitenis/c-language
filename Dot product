#include <stdio.h>
#define MAX 100
main()
{ float a[MAX], b[MAX] ,s=0,m;
int i,n;
	printf("\nn?");
	while(1){

	scanf("%d", &n);
		if(n<1 || n>MAX)
	break;
		printf("\nUnesi niz a\n ");
		for(i=0;i<n;i++)
	{
		scanf("%f", &a[i]);
	
	}
	
		printf("\nUnesi niz b \n ");
			
	for(i=0;i<n;i++)
	{
	
		scanf("%f", &b[i]);
		
	}
			
		for(i=0;i<n;i++)
	{
		
		s =s+ a[i]*b[i];
		
		
	}	
		printf("\nSkalarni proizvod: %f", s);}


}
